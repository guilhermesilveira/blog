@import "nib"
@import "tema/base"

/* RESET */
*, 
*:after,
*:before
	box-sizing border-box
	padding 0
	margin 0


/* TEMA (customizacao)
	cor da borda da direita no body
 */
.classic-theme
	borda-direita #F90

.dark-theme
	borda-direita rgba(255,153,0, 0.5)

.light-theme
	borda-direita darken(#F90, 10%)

/* body e base */
body
	border-right-style solid
	border-right-width 0.5em

	font-family: 'Arial', sans-serif;
	font-weight: 400;
	line-height: 1.55;

	/* evita resizes chatos do iOS */
	-webkit-text-size-adjust: 100%;


	/* pra dar a sensação de body 100% em pg com pouco conteudo, 
	   posiciona uma faixa na direita igual a borda do body.
	   ela pega 100% do viewport, mesmo se o body for menor. */
	&:after
		content: '';
		display: block;

		position: absolute; // fallback pra browsers sem fixed
		fixed: top 0 bottom 0
		right: 0

		width: 0.5em;


.container
	max-width: 52em;
	padding: 0 2em;
	position: relative;



/* pagina de texto puro como posts e pages (sobre, home) */
.text-page
	color: #333;
	padding: 2.5%;

	// normaliza espaçamentos entre elementos de texto
	p, blockquote
		margin 1.5em 0
	ul
		margin-bottom 1.5em
	li
		margin 0 0 1em 0


/* legibilidade: em torno de 60 caracteres por linha */
.limit-line-length 
	p, li
		max-width: 30em;
	blockquote
		max-width: 32em;

/* listas não devem ser espaçadas */
.narrow-lists li
	margin: 0;



/* RESPONSIVE: scaling basico da fonte  */
@media (min-width: 37em) { /* 592px */
	body { font-size: 1.125em; /* 18px */ }
}
@media (min-width: 47em) { /* 752px */
	body { font-size: 1.1875em; /* 19px */ }
}
@media (min-width: 68em) { /* 1088px */
	body { font-size: 1.25em; /* 20px */ }
}
@media (min-width: 82em) { /* 1312px */
	body { font-size: 1.375em; /* 22px base */ }
} 
@media (min-width: 100em) { /* 1600px */
	body { font-size: 1.5em; /* 24px base */ }
}

/* RESPONSIVE (mobile first): layout */
@media (min-width: 37em) // 592px
	body
		border-right-width: 1em;

		&:after 
			width: 1em;


	.text-page
		padding: 2em;


@media (min-width: 41em) // 656px
	body
		border-right-width: 1.5em;

		&:after
			width 1.5em


