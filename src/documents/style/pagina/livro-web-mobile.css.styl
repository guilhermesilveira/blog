---
standalone: true
---

@import "nib"

*, *:before, *:after
	box-sizing border-box
	margin 0
	padding 0
	font-size 1em

@css {
	@font-face {
		font-family: 'Museo';
		font-weight: 700;

		/* caracteres só:
			A Web Mobile Sobre o autor Tópicos do livro Compre já o livro:
			*/
		src: url(data:font/truetype;charset=utf-8;base64,);
	}
}

// responsive text
html
	@media (min-width: 25em)
		font-size: 105%
	@media (min-width: 30em)
		font-size: 110%
	@media (min-width: 35em)
		font-size: 120%
	@media (min-width: 40em)
		font-size: 130%
	@media (min-width: 45em)
		font-size: 140%
	@media (min-width: 50em)
		font-size: 150%

body
	border-top 1em solid #F90
	font-family: Arial

.container
	max-width: 800px
	margin 0 auto
	width: 95%

p, li
	line-height 1.45

.nome
	font-size 1.25em
	padding 0 0 1.25em 0
	text-align center

	@media (min-width: 40em)
		font-size 120%
	@media (min-width: 45em)
		font-size 130%
	@media (min-width: 50em)
		font-size 140%

	.titulo
		font-family: Museo, Arial
		font-weight: 700
		font-size: 2em

		@media (min-width: 40em)
			font-size 2.4em
		@media (min-width: 45em)
			font-size 2.7em
		@media (min-width: 50em)
			font-size 3em

	.subtitulo
		font-weight normal

.autor
	color: #555
	padding 1em 0 0.5em
	text-align center
	text-transform uppercase
	font-family Arial Narrow, Arial
	font-weight normal
	text-shadow 1px 1px 1px rgba(255,255,255,0.1)

	@media (min-width: 40em)
		font-size 1.125em
		padding-top 2em

.ilustracao
	display block 
	width 100%
	padding-top (403 / 549 * 100%)
	position: relative
	overflow hidden
	//width 549px
	//height 403px

	svg
		absolute top 0 left 0

.no-svg .ilustracao
	display none

.engrenagem-pequena
	transform-origin 297px 309px
	animation gira-horario 9s linear infinite

.engrenagem-grande
	transform-origin 266px 226px
	animation gira-anti 9s linear infinite

.nuvem-branca
	animation move-nuvem 6s ease-out infinite alternate

.nuvem-fundo
	animation move-nuvem 7s ease-in infinite alternate

.seta
	animation muda-cor 2s linear infinite

	& + .seta
		animation-delay -0.5s
		& + .seta 
			animation-delay -1s
			& + .seta 
				animation-delay -1.5s

@keyframes gira-horario
	to
		transform: rotate(360deg)

@keyframes gira-anti
	to
		transform: rotate(-360deg)

@keyframes move-nuvem
	to
		transform: translateX(25px)

@keyframes muda-cor
	0%,74%
		fill: #fcb870
	75%,100%
		fill: #f89c33

.cdc
	display block
	text-align center
	margin-bottom 1em
	img
		border 0
		max-width 70%
		width 300px

.descricao, .compreja-container
	background #f89c33
	padding 1em 0

	p
		margin 1em 0

	a
		color: #003

		&:visited
			color: #204

		&:hover
			color #336


.compreja
	margin-top 0.75em
	margin-bottom 0.75em
	position relative

	h2
		font-family Museo, Arial
		font-weight 700
		font-size 1.75em
		margin-bottom 0.5em
	form
		display: inline

	input
		background #FFA
		display: inline
		cursor pointer
		border: 0
		border-radius 0
		color: #222
		padding: 0.75em
		line-height 1
		white-space: normal
		-webkit-appearance: none; //ios

		display block
		width: 100%
		margin: 1em 0

		&:hover
			opacity: 0.9

		&:active
			transform: translateY(2px)

	p
		color: #222
		font-style italic
		font-size 75%

	@media (min-width: 25em)
		padding-right: 50%

.compre
	text-align center

a.compre-botao
	background #FFA
	display inline-block
	cursor pointer
	border 0
	border-radius 0
	color #222
	padding: 0.75em 1em
	line-height 1
	font-size 1.25em
	white-space normal
	text-decoration none
	margin-top: 1em

	box-shadow 2px 2px 4px rgba(0,0,0,0.35)
	border-radius 3px

	&:hover
		opacity: 0.9
		box-shadow 2px 2px 4px rgba(0,0,0,0.5)

	&:active
		transform: translateY(2px)
		box-shadow 0 0 2px rgba(0,0,0,0.15)

p.compre-info
	font-style italic
	padding 0 1em
	color #FFD
	margin 0.5em 0 1em 0

.promocao
	text-align center
	text-transform lowercase

	@media (min-width: 25em)
		absolute top 2.5em right 0
		width: 45%

	h3
		color #FFF
		font-weight normal
		font-style italic
		padding-bottom 0.5em
	img
		max-width 100%

.sumario-itens
	list-style-type none

	.part
		display block
		font-weight bold
		padding-top 1em

	.topicos
		list-style-position inside

.sumario-titulo
	font-family Museo, Arial
	font-weight 700
	font-size 1.75em
	margin-bottom 0.5em

.sumario
	margin-top 1.2em
	margin-bottom 1.2em
	position: relative

	p
		margin: 1em 0
		font-style italic

.sobre-container
	background #f0f0f0
	padding 1em 0

	p
		margin: 1em 0

.sobre-titulo
	font-family Museo, Arial
	font-weight 700
	font-size 1.75em
	margin-bottom 0.5em

.sobre-foto
	display block
	margin 0.5em auto
	max-width 70%

	@media (min-width: 22em)
		float right
		margin 0.5em 1em 0.5em 0
		width 40%

.capa-livro
	box-shadow 1px 1px 4px rgba(0,0,0,0.30)
	display block
	width 15em
	margin 1em auto

