@import "nib"

laranja = #F90
laranja_escuro = #F36C13
azul = #3299BB
laranja_meio = #ff6828
amarelo_claro = #F5E617

// icon font Caelum
@font-face {
	font-family: Caelum;
	src: url(/img/palestra/mobile-web/caelum-logo.ttf)
}
.font-caelum
	font-size: 600px
	height: 0.276em
	width: 0.79em

	//overflow: hidden
	position: relative
	display: inline-block

	&:before
		content: 'C';
		font-family: Caelum;
		line-height: 1
		absolute: top -0.35em left 0.02em

// base
.slide .content
	padding: 0;
	font-size: 16px; // unifica default por causa do mobile
	-webkit-text-size-adjust: none

.slide .audience, .slide .notes
	b, strong
		color: amarelo_claro
		font-weight: normal

	a
		color: laranja

		&:visited
			color: laranja_meio

	code
		color #aaa

.notes
	font-family: Arial;
	padding: 0.5em;

// quem sou eu
#quem .content 
	background: transparent url(/img/palestra/sergio-lopes.jpg) no-repeat bottom center
	background-size: cover;
	font-size 1em

	h1
		background: none
		color: darken(azul,10%)
		font-size: 1000%
		font-weight: normal
		padding-right: 2%
		padding-top: 6%
		line-height: 0.8
		text-align: right
		text-transform: lowercase
		margin: 0;

		span
			display: block

	ul
		margin-top: 1.8em
		padding-right: 2%

		li
			padding: 0
			list-style-type: none
			text-align: right

		a
			color: laranja_escuro
			text-decoration: none

	.logo
		absolute: bottom 190px right 10px
		font-size: 400px


// obrigado no fim
#fim
	.content
		background: laranja

		h1
			color: darken(laranja_escuro, 20%)
			font-size: 2000%
			font-weight: normal
			line-height: 1.2;
			text-align: center
			
			margin: 0;
			padding: 0 2%;
			margin-bottom: 32px

		.contato a
			color: #222
			display: block
			font-size: 700%
			text-align: right
			line-height: 1.3
			text-decoration: none
			padding-right: 50px

		.logo
			position: absolute;
			bottom: 210px;
			left: 40px;
			font-size: 450px;