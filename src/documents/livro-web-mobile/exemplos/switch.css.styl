.switch, .switch * {
	-moz-box-sizing: border-box;
	     box-sizing: border-box;
	margin: 0;
	padding: 0;
}
.switch {
	position: relative;
	margin: 1em;
	height: 2em;
	width: 7em;

	color: white;
	font-family: Arial, sans-serif;

	overflow: hidden;
} 

.switch-container {
	position: absolute;
	top: 0;
	left: -50%;
	width: 150%;
}
.active .switch-container {
	left: 0;
}

.switch-control {
	border: 1px solid #666;
	background: white;
	box-shadow: 0 0 3px rgba(0,0,0,0.4);

	position: absolute;
	top: 0;
	left: 33.3333%;
	z-index: 1;

	height: 2em;
	width: 33.3333%;
}

.switch, .switch-control {
	border-radius: 0.4em;
}

.switch-on, .switch-off {
	position: absolute;
	top: 0;
	width: 50%;

	display: block;

	line-height: 2em;
	vertical-align: middle;
	text-align: center;

	box-shadow: inset 0 0 5px rgba(0,0,0,0.4);
}
.switch-on {
	padding-right: 25%;
	left: 0;
}
.switch-off {
	padding-left: 25%;
	left: 50%;
}

/* colors */
.switch { background: #bbb; }
.switch-on { background: #27A1CA; }
.switch-off { background: #888; }